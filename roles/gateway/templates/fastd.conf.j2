# {{ ansible_managed }}

log to syslog level debug;
bind {{outernet.inet.subnet }}.{{ gateway_number }}:{{ fastd_port }} interface "{{ ansible_default_ipv4.interface }}";
{% if outernet.inet6.subnet is defined %}
bind [{{ outernet.inet6.subnet }}{{ gateway_number }}]:{{ fastd_port }} interface "{{ ansible_default_ipv4.interface }}";
{% endif %}
method "salsa2012+umac";
mtu 1560;
include "secret.conf"; # generated by ansible
include peers from "peers";
on up "
  /sbin/ifup bat0
  /bin/ip link set dev tap0 address 00:91:0d:d0:5e:0{{ gateway_number }}
  /bin/ip link set dev tap0 up
";
